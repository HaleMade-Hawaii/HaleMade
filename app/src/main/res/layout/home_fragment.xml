<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".homeFragment">


    <ImageView
        android:id="@+id/firstImageView"
        android:layout_width="167dp"
        android:layout_height="115dp"
        android:layout_marginBottom="212dp"
        android:src="@drawable/home_gallery_1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/secondImageView"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/secondImageView"
        android:layout_width="167dp"
        android:layout_height="115dp"
        android:layout_marginBottom="212dp"
        android:src="@drawable/home_gallery_2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/firstImageView" />

    <ImageView
        android:id="@+id/thirdImageView"
        android:layout_width="167dp"
        android:layout_height="115dp"
        android:layout_marginBottom="80dp"
        android:src="@drawable/home_gallery_3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/fourthImageView"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/fourthImageView"
        android:layout_width="167dp"
        android:layout_height="115dp"
        android:layout_marginBottom="80dp"
        android:src="@drawable/home_gallery_4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/thirdImageView" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="0dp"
        android:layout_height="61dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="28dp"
        android:background="@drawable/rounded_corner"
        android:gravity="center"
        android:text="@string/home_quote"
        android:textColor="#FFF"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/fivethImageView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/sixthImageView"
        android:layout_width="167dp"
        android:layout_height="115dp"
        android:layout_marginBottom="100dp"
        android:src="@drawable/home_gallery_6"
        app:layout_constraintBottom_toTopOf="@+id/firstImageView"
        app:layout_constraintEnd_toStartOf="@+id/fivethImageView"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/fivethImageView"
        android:layout_width="167dp"
        android:layout_height="115dp"
        android:layout_marginBottom="100dp"
        android:src="@drawable/home_gallery_5"
        app:layout_constraintBottom_toTopOf="@+id/secondImageView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/sixthImageView" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="0dp"
        android:layout_height="61dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/rounded_corner"
        android:gravity="center"
        android:text="@string/home_featured"
        android:textColor="#FFF"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/firstImageView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>